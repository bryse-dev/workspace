bindsym Mod1+4 workspace next
bindsym Mod1+5 workspace next
bindsym Mod1+6 workspace prev
bindsym Mod1+7 workspace prev
bindsym Mod1+8 workspace prev
bindsym Mod1+9 workspace prev
bindsym Mod1+0 workspace prev

## Assign workspaces to programs
exec --no-startup-id 'sudo systemd-resolve --set-dns 10.91.92.125 --interface eno1'
exec --no-startup-id i3-msg 'workspace 1; exec /usr/bin/firefox https://cas-west.exchange2.ara.wan/owa/'
exec --no-startup-id i3-msg 'workspace 1; exec /usr/bin/slack'

# Manage (named) workspaces.                                                                                                                                    
bindsym Mod1+comma  exec i3-input  -P '(switch view to workspace) name: ' -F 'workspace "%s"', mode "default"
bindsym Mod1+period exec i3-input  -P '(move window to workspace) name: ' -F 'move container to workspace "%s"', mode "default"
bindsym Mod1+slash  exec i3-input  -P '(rename this workspace to) name: ' -F 'rename workspace to "%s"', mode "default"
bindsym Mod1+Next workspace next
bindsym Mod1+Prior workspace prev

